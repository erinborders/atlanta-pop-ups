<div class="edit-food-form-main">
    <form action="/locations/{{food.locationId}}/food/{{food._id}}?_method=PUT" method="post">
    
    <label for="restaurant-name">Restaurant Name:</label>
    <input type="text" name="restaurant" value="{{food.restaurant}}" id="restaurant-name">

    <label for="cuisine">Cuisine:</label>
    <input type="text" name="cuisine" value="{{food.cuisine}}" id="cuisine">

    <label for="price">Price:</label>
    <input type="text" name="price" value="{{food.price}}" id="price" placeholder="$, $$, $$$, $$$$">

    <label for="address">Address:</label>
    <input type="text" name="address" value="{{food.address}}" id="address">

    <label for="date">Date:</label>
    <input type="date" name="time" value="{{food.time}}" id="date">

    <input type="submit" value="Submit">
    </form>
</div>


