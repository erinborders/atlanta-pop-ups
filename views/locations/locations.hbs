<h1>Atlanta Pop Ups</h1>

{{#each locations}}
<a href="/locations/{{_id}}">{{neighborhood}}</a>
{{/each}}

<form action="/locations/new" method="get">
    <input type="submit" value="Add a Neighborhood">
</form>

<p>
    All the pop ups in your area in one place.
    Never miss out on your favorite store or restaurants 
    event again.
</p>

<form action="/locations/food" method="get">
    <input type="submit" value="Food">
</form>

<form action="/locations/shops" method="get">
    <input type="submit" value="Shops">
</form>

<div id="pop-ups">
    {{#each shops}}
        <div>
            <a href="/locations/{{locationId}}/shops/{{_id}}">{{shop}}</a>
            {{address}}
            {{time}}
        </div>
    {{/each}}
    {{#each food}}
        <div>
            <a href="/locations/{{locationId}}/food/{{_id}}">{{restaurant}}</a>
            {{address}}
            {{time}}
        </div>
    {{/each}}
</div>